{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image":"soobtech/multi-client",
            "hostname": "client",
            "essential": false

        },
        {
            "name": "server",
            "image": "soobtech/multi-server",
            "hostname": "api",
            "essential": "false"

        },
        {
            "name": "worker",
            "image": "soobtech/multi-server",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "soobtech/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client", "server"]

        }
    ]
}